version: "2.2"

services:
  app:
    image: tomcat:9.0-jdk17
    container_name: app-service
    ports:
      - "8080:8080"
    environment:
      APP_NAME: demo-app
      APP_ENV: dev
    volumes:
      - ./TrainBook-1.0.0-SNAPSHOT.war:/usr/local/tomcat/webapps/ROOT.war
    depends_on:
      - db
    command: ["catalina.sh", "run"]

  db:
    image: mysql:8.0
    container_name: mysql-db
    environment:
      MYSQL_ROOT_PASSWORD: root123
      MYSQL_DATABASE: demo
